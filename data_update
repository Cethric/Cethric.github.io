SRC_BASE="/Users/blakerogan/Dropbox/Apps/Editorial/Cethric.github.io"
DST_BASE_1="/Users/blakerogan/Dropbox/Apps/Editorial/HTMLEditor-Pythonista"
DST_BASE_2="/Users/blakerogan/Dropbox/Apps/Editorial/XGE"
DST_BASE_3="/Users/blakerogan/Dropbox/Apps/Editorial/Blender-Utilities"
DST_BASE_4="/Users/blakerogan/Dropbox/Apps/Editorial/Stuff-MincraftForgeMod"

for dir in "/javascript" "/css" "/_sass" "/_layouts" "/_includes"
do
        SRC=$SRC_BASE$dir
	for DST in $DST_BASE_1 $DST_BASE_2 $DST_BASE_3 $DST_BASE_4
	do
        	echo CP $dir to $DST
		cp -r $SRC $DST
	done
done

